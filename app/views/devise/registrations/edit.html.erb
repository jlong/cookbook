<article>
  <header class="header">
    <h1>Account</h1>
  </header>
  <div class="content">
    <div class="row">
      <div class="span6">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
          <%= devise_error_messages! %>

          <%= f.label :email %>
          <%= f.email_field :email, class: 'span6' %>

          <%= f.label :password %> 
          <%= f.password_field :password, :autocomplete => "off", class: 'span6' %>
          <span class="help-block">(leave blank if you don't want to change it)</span>

          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: 'span6' %>

          <%= f.label :current_password %> 
          <%= f.password_field :current_password, class: 'span6' %>
          <span class="help-block">(we need your current password to confirm your changes)</span>

          <div class="form-actions">
            <%= f.submit "Save changes", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
      <div class="span5 offset1">
        <div class="well">
          <h3 class="well-heading">Cancel my account</h3>
          <p>Unhappy? <%= link_to "Cancel my account.", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>
        </div>
      </div>
    </div>
  </div>
</article>