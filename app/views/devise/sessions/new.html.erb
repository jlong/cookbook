<article>
  <header class="header">
    <h1>Sign in</h1>
  </header>
  <div class="content">
    <div class="row">
      <div class="span5">

        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <%= f.label :email %>
          <%= f.email_field :email, class: "span5" %>
          
          <%= f.label :password %>
          <%= f.password_field :password, class: "span5" %>
          
          <div class="form-actions">
            <%= f.submit "Sign in", class: "btn btn-primary" %>
            &nbsp;
            <label class="checkbox inline"><%= f.check_box :remember_me %> Remember me</label>
          </div>
        <% end %>

      </div>
    </div>
  </div>
  <footer class="footer"><%= render "devise/shared/links" %></footer>
</article>
