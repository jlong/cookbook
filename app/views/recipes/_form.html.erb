<%= form_for @recipe, html: { class: 'form-horizontal' } do |f| %>

  <div class="control-group <%= error_class @recipe, :title %>">
    <%= f.label :title, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, class: 'input-title span8' %>
      <%= errors_for @recipe, :title %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :instructions, class: 'control-label' %>
    <div class="controls"><%= f.text_area :instructions, class: 'span8' %></div>
  </div>

  <div class="form-actions">
    <%= f.submit "Save recipe", class: 'btn btn-primary' %>
    <%= link_to 'Cancel', :back, class: 'btn' %>
  </div>
<% end %>
